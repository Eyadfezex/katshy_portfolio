---
import Layout from "../layouts/Layout.astro";
import LoadingPage from "../components/loadingPage";
import Strp from "../components/Strap";
import Lamp from "../components/lamp";
import Slogan from "../components/slogan";
import "../styles/index.css";
---

<Layout title="Katshy">
  <LoadingPage client:load className="z-10" />
  <main class="relative top-0 w-full pt-[7rem] overflow-hidden h-screen">
    <Slogan client:only />
    <Lamp client:only />
    <Strp className={`absolute rotate-45 xl:left-[-10rem] bg-[#D2FC1C] `} />
    <Strp
      className={`absolute rotate-[-10deg] lg:top-[75%] xl:top-[65%] lg:left-[-6rem] xl:left-[-5rem] bg-[#212121] text-[#D2FC1C]`}
    />
  </main>
</Layout>
